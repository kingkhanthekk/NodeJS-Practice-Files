<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= farm.name %></title>
  </head>
  <body>
    <h2><%= farm.name %></h2>
    <ul>
      <li>Location: <%= farm.location %></li>
      <li>Email: <%= farm.email %></li>
    </ul>
    <h3>Products</h3>
    <ul>
      <% for(let product of farm.products) { %>
      <li>
        <a href="/products/<%= product._id %>/details"><%= product.title %></a>
      </li>
      <% } %>
    </ul>
    <a href="/farms/<%= farm._id %>/products/new">Add a product</a>
    <form action="/farms/<%= farm._id %>?_method=delete" method="post">
      <button>Delete</button>
    </form>
    <a href="/farms">All farms</a>
  </body>
</html>
